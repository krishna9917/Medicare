<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/clLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_search"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtItem1"
            style="@style/Style_bold_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sorry no Result Found"
            android:textColor="@color/color_theme_80"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txtItem2"
            style="@style/Style_regular_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="We couldn't find what you searched for Try Searching again"
            android:textColor="@color/color_gray_60" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            app:strokeWidth="1dp"
            android:id="@+id/cvBtn"
            android:clickable="true"
            android:elevation="0dp"
            android:visibility="gone"
            android:focusable="true"
            app:strokeColor="@color/color_theme_5"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:paddingHorizontal="20dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="ADD NOW"
                    android:id="@+id/txtBtn"
                    style="@style/Style_regular_font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>




    </LinearLayout>
</layout>