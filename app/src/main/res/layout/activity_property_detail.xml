<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    
    <data>
        <import type="android.view.View"/>
        <variable
            name="isReadMoreVisibile"
            type="boolean"/>
        
    </data>
    

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PropertyDetail.PropertyDetailActivity">




    <ImageView
        android:src="@drawable/ic_back_arrow"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:id="@+id/imgBack"
        android:translationZ="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        app:tint="@color/black" />



    <TextView
        android:text="SKYFALL BY REPLAY"
        app:layout_constraintStart_toEndOf="@id/imgBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        style="@style/Style_bold_font"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/imgBack"
        app:layout_constraintTop_toTopOf="@id/imgBack"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgBack"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPropertyImages"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingHorizontal="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_location"
                        android:layout_width="24dp"
                        app:tint="@color/color_theme_100"
                        android:layout_height="24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        style="@style/Style_medium_font"
                        android:layout_marginStart="10dp"
                        android:text="Ridhi sidhi tonk phatak, 5th floor ,opposite of tower"
                        android:layout_height="wrap_content" />
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_phone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/color_theme_100" />

                    <TextView
                        style="@style/Style_regular_font"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:text="85736276335"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:maxLines="3"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:visibility="@{isReadMoreVisibile?View.GONE :View.VISIBLE}"
                    android:id="@+id/txtDescription"
                    android:textColor="@color/color_theme_70"
                    style="@style/Style_regular_font"
                    android:text="jg kjgh dshjasdakj dkjahs kljsa dkl aslkd kl dkl dkl asdkln xhnZ klxz ZxkljZ xZxkl ZxZxnkZ xzkl ZMX,ZNX ZX,ZNXZ xZKxZ xklnxZ xkZx ZxkZ xZKxZ xZLx;nZ xZLxk zxlknklnxvvxzcj sdlk sakld dlk sdlkn sdlkns dkldasdkl adkldas kld sadm,sa dkl adkhas kjasd kjasdha sdklndas dkasndas dkasjd dlk dklndassdkask"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:text="@{isReadMoreVisibile?@string/view_less:@string/read_more}"
                    android:id="@+id/txtReadMoreAndLess"
                    style="@style/Style_medium_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/txtFullDescription"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/color_theme_70"
                    style="@style/Style_regular_font"
                    android:visibility="@{isReadMoreVisibile?View.VISIBLE :View.GONE}"
                    android:text="jg kjgh dshjasdakj dkjahs kljsa dkl aslkd kl dkl dkl asdkln xhnZ klxz ZxkljZ xZxkl ZxZxnkZ xzkl ZMX,ZNX ZX,ZNXZ xZKxZ xklnxZ xkZx ZxkZ xZKxZ xZLx;nZ xZLxk zxlknklnxvvxzcj sdlk sakld dlk sdlkn sdlkns dkldasdkl adkldas kld sadm,sa dkl adkhas kjasd kjasdha sdklndas dkasndas dkasjd dlk dklndassdkask"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:background="@color/color_gray_30"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/rvTabs"
                android:paddingHorizontal="10dp"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="wrap_content"/>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:id="@+id/rvTabData"
                android:paddingBottom="10dp"
                android:paddingHorizontal="10dp"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:background="@color/color_gray_30"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/color_theme_5"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtNearDeals"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    style="@style/Style_bold_font"
                    android:layout_marginStart="5dp"
                    android:layout_margin="10dp"
                    android:textSize="19sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="@string/similar_options"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rvSimilarOption"
                    app:spanCount="2"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>













</androidx.constraintlayout.widget.ConstraintLayout>
</layout>