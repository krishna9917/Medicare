<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/color_theme_100">


            <ImageView
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_back_arrow"
                android:id="@+id/imgBack"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/txtTitle"
                style="@style/Style_bold_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offers_available_for_you"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:id="@+id/btn1"
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_filter"
                android:layout_height="wrap_content"
                app:tint="@color/white" />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="15dp"
                app:layout_constraintTop_toTopOf="@id/btn1"
                app:layout_constraintEnd_toEndOf="@id/btn1"
                app:cardCornerRadius="50dp"
                android:visibility="gone"
                app:strokeWidth="0.8dp"
                android:layout_margin="5dp"
                android:id="@+id/cvBtn1Count"
                app:strokeColor="@color/color_gray_40"
                android:layout_height="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="2"
                        android:id="@+id/txtBtn1Count"
                        style="@style/Style_bold_font"
                        android:textSize="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_60" />

    </LinearLayout>
</layout>